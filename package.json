{
  "name": "ignite-theme",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npx tailwindcss -i src/styles.css -o assets/css/style.css --minify",
    "watch": "npx tailwindcss -i src/styles.css -o assets/css/style.css --watch",
    "build:tw:base": "npx tailwindcss -c tailwind.config.js -i src/tailwind/input-base.css -o assets/css/tailwind-base.css",
    "build:tw:components": "npx tailwindcss -c tailwind.config.js -i src/tailwind/input-components.css -o assets/css/tailwind-components.css",
    "build:tw:utils": "npx tailwindcss -c tailwind.config.js -i src/tailwind/input-utilities.css -o assets/css/tailwind-utilities.css",
    "build:tw:all": "npx tailwindcss -c tailwind.config.js -i src/tailwind/input.css -o assets/css/style.css",
    "watch:tw:base": "npx tailwindcss -c tailwind.config.js -i src/tailwind/input-base.css -o assets/css/tailwind-base.css --watch",
    "watch:tw:components": "npx tailwindcss -c tailwind.config.js -i src/tailwind/input-components.css -o assets/css/tailwind-components.css --watch",
    "watch:tw:utils": "npx tailwindcss -c tailwind.config.js -i src/tailwind/input-utilities.css -o assets/css/tailwind-utilities.css --watch",
    "watch:tw:all": "npx tailwindcss -c tailwind.config.js -i src/tailwind/input.css -o assets/css/style.css --watch",
    "extract:tw": "php tools/extract-tailwind-classes.php",
    "build:tw:with-extract": "npm run extract:tw && npm run build:tw:all",
    "watch:extract:poll": "bash tools/watch-extract.sh 5",
    "watch:extract:files": "nodemon --watch . --watch src --ext php,html,js --ignore node_modules --exec \"php tools/extract-tailwind-classes.php\"",
    "watch:extract": "npm run watch:extract:files",
    "watch:all": "concurrently \"npm run watch:extract\" \"npm run watch:tw:all\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
     "nodemon": "^3.1.11",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18"
  }
}
